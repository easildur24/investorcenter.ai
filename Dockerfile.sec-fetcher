FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install psycopg2-binary requests

# Copy all SEC fetcher scripts
COPY scripts/sec_filing_fetcher.py /app/
COPY scripts/sec_5year_backfill.py /app/

# Run the fetcher (can be overridden)
ENTRYPOINT ["python", "sec_filing_fetcher.py"]
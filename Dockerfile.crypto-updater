FROM python:3.13-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends git && \
    rm -rf /var/lib/apt/lists/*

# Install only the dependencies needed for coingecko service
RUN pip install --no-cache-dir aiohttp redis psycopg2-binary

# Copy scripts
COPY scripts/coingecko_complete_service.py .

# Run the service
CMD ["python3", "coingecko_complete_service.py"]

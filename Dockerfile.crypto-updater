FROM python:3.13-slim

WORKDIR /app

# Install dependencies
COPY scripts/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir aiohttp redis psycopg2-binary

# Copy scripts
COPY scripts/coingecko_complete_service.py .

# Run the service
CMD ["python3", "coingecko_complete_service.py"]
